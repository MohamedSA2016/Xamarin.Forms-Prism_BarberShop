<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"             
             x:Class="PrismBarbearia.Views.SchedulesPage"
             Title="{Binding Title}">

    <StackLayout Padding="20" >
        <Button Text="Ver agenda" Command="{Binding SchedulesWeekPageCommand}" BackgroundColor="DarkGreen" TextColor="White" 
                IsVisible="{Binding IsVisibleAdminButtons}" />

        <Button Text="Cortar cabelo" BackgroundColor="DarkGreen" TextColor="White" 
                IsVisible="{Binding IsVisibleUserButtons}"/>

    </StackLayout>
</ContentPage>